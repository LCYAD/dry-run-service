    "dev:node": "tsx watch src/index.ts",
    "build": "tsc"
  },
  "dependencies": {
    "hono": "^4.7.2",
    "@hono/node-server": "^1.13.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "bun-types": "^1.0.25"
  }
} 