{
  "name": "dry-run-service",
  "version": "1.0.0",
  "description": "A cross-platform compatible API service using Hono",
  "type": "module",
  "scripts": {
    "start:bun": "bun src/index.ts",
    "start:node": "tsx src/index.ts",
    "dev:bun": "bun --watch src/index.ts",
    "dev:node": "tsx watch src/index.ts",
    "build": "tsc"
  },
  "dependencies": {
    "hono": "^3.12.0",
    "@hono/node-server": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "bun-types": "^1.0.25"
  }
} 