{
  "name": "dry-run-service",
  "version": "1.0.0",
  "description": "A cross-platform compatible API service using Hono",
  "type": "module",
  "scripts": {
    "start:bun": "bun src/bun.ts",
    "start:node": "tsx src/node.ts",
    "dev:bun": "bun --watch src/bun.ts",
    "dev:node": "tsx watch src/node.ts",
    "build": "tsc",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/zod-validator": "^0.4.3",
    "drizzle-orm": "^0.40.0",
    "hono": "^4.7.2",
    "mysql2": "^3.12.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "bun-types": "^1.0.25",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.21.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "prettier": "^3.5.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.3.1"
  }
}
